<script>
    //var xdata = ['1:00','3:30','4:15','6:15','7:15','8:15'];
    var xdata = [{{chartTime}}];
    var ydata = [{{chartPower}}];
    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: xdata,
            datasets: [{
                label: 'Power',
                data: ydata,
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                borderColor:'rgba(255, 159, 64, 1)',
                borderWidth: 3,
            }]
        },
        options: {
            scales: {
                xAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'Time'
                    }
                }],
                yAxes: [{
                    ticks: {
                        beginAtZero:true,
                    },
                    scaleLabel: {
                            display: true,
                            labelString: 'Power (W)'
                    }
                }],
            }
        }
    });
</script>
